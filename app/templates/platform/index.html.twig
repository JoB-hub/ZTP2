{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.platform_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.platform_list'|trans }}</h1>
    {% if platforms is defined and platforms|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.name'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for platform in platforms %}
                <tr>
                    <td>{{ platform.id }}</td>
                    <td>{{ platform.name }}</td>
                    <td>
                        <a href="{{ url('platform_show', {id: platform.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}