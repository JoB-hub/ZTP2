{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.picture_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.picture_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'picture.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.filename'|trans, 'picture.filename') }}</th>
                <th>{{ 'label.picture'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for picture in pagination.items %}
                <tr>
                    <td>{{ picture.id }}</td>
                    <td>{{ picture.filename }}</td>
                    <td><img src="https://picsum.photos/seed/{{ picture.filename }}/200/200" alt="Image depicting XYZ"></td>
                    <td>
                        <a href="{{ url('picture_show', {id: picture.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ 'action.show'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}