{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.picture_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.picture_list'|trans }}</h1>
    {% if pictures is defined and pictures|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.filename'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for picture in pictures %}
                <tr>
                    <td>{{ picture.id }}</td>
                    <td>{{ picture.filename }}</td>
                    <td>
                        <a href="{{ url('picture_show', {id: picture.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}